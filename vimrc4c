set cindent
set smartindent
set autoindent
set showmatch
set incsearch
set shiftwidth=4
set ruler
set tabstop=4
set title
set smarttab
"set fdm=indent

" ker map

" for taglist
" if has("ctags")
	let Tlist_Show_One_File=1
	let Tlist_Exit_OnlyWindow=1
        let Tlist_Use_Left_Window=1
        let Tlist_Auto_Update=1
        let Tlist_Auto_Open=1
" endif

" for cscope
if has("cscope")
	set csprg=/usr/bin/cscope
	set csto=1
	set cst 
	set nocsverb
	" add any database in current directory
	if filereadable("cscope.out")
		cs add cscope.out
	endif
	set csverb
endif

" functions
